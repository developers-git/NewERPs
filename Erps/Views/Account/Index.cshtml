@model Erps.Models.LoginViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Login.cshtml";

}







@using (Html.BeginForm(new { autocomplete = "off" }))
{@Html.AntiForgeryToken()


<!-- Form Module-->
<div class="login-box">

    <div class="form">
        

        <div class="login-box-body">
            <div class="login-logo">
                <img src="~/images/SmartSchool.PNG" class="img-responsive" />
            </div>

            <label class="text-center">Login to your account</label>
            <form>
                @*@Html.LabelFor(model => model.Username, new { @class = "sr-only" })*@
                <div class="form-group has-feedback">

                    @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control", @Autocomplete = "off", @placeholder = "Username/Email", @type = "Text", @title = "Username is  mandatory" } })
                    <span class="glyphicon glyphicon-envelope form-control-feedback"></span>

                    @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-information" })

                </div>
                <div class="form-group has-feedback">

                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @Autocomplete = "off", @placeholder = "Password...", @type = "password", @title = "Password is  mandatory" } })
                    @Html.ValidationMessageFor(model => model.Password, "", new { @style = "color:red" })

                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                </div>
                <div class="form-group">
                    <p style="color:red"><i>@ViewBag.Attempts</i></p>

                </div>

                <br />
                <div class="row">
                    <div class="col-xs-6">
                        <input type="submit" value="Login" class="btn btn-primary btn-raised btn-block btn-flat" />
                    </div>
                    <!-- /.col -->
                    <div class="col-xs-6">
                        <input type="reset" value="Clear" class="btn btn-info btn-raised btn-block btn-flat" />
                    </div>
                    <!-- /.col -->
                </div>

                <br />



            </form>

            <div class="cta"><a href="~/Account/ForgotPassword">Forgot your password?</a></div>
        </div>
    </div>
    @*<div class="form">
            <h2>Create an account</h2>
            <form>
                <input type="text" placeholder="Username" />
                <input type="password" placeholder="Password" />
                <input type="email" placeholder="Email Address" />
                <input type="tel" placeholder="Phone Number" />
                <button>Register</button>
            </form>
        </div>*@
   
</div>
}
