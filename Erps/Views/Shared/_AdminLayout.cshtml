                            <a href="#" data-toggle="control-sidebar"><i class="fa fa-gears"></i></a>
                        </li>
                    </ul>
                </div>
            </nav>
        </header>
        <!-- Left side column. contains the logo and sidebar -->
        <aside class="main-sidebar">
            <!-- sidebar: style can be found in sidebar.less -->
            <section class="sidebar">

                <!-- sidebar menu: : style can be found in sidebar.less -->
                <ul class="sidebar-menu" data-widget="tree">
                    <li class="header">ERPS</li>


                    @{

                        var db = Database.Open("SBoardConnection");

                        var selectQueryString = "SELECT * FROM Modules where (select RoleName from Role where Roleid=Modules.RoleID)='Admin'  order by MenuRank asc";

                        string name = "";
                        string controllername = "";
                        string action = "";
                        string forinner = "";
                        string webformurl = "";
                        bool check = false;
                        string controllername1 = "";
                        string action1 = "";
                        foreach (var row in db.Query(selectQueryString))
                        {
                            forinner = row.ModulesName;
                            action1 = row.ViewName;
                            controllername1 = row.ControllerName;


                            <li class="treeview">

                                @if (controllername1 != null && action1 != null)
                                {

                                    <a href="#" onclick="location.href ='@Url.Action(action1, controllername1)';">
                                        <i class="fa fa-th"></i> <span>@row.ModulesName</span>
                                        <span class="pull-right-container">
                                            <i class="fa fa-angle-left pull-right"></i>
                                        </span>
                                    </a>
                                }
                                else
                                {


                                    <a href="#">
                                        <i class="fa fa-th"></i> <span>@row.ModulesName</span>
                                        <span class="pull-right-container">
                                            <i class="fa fa-angle-left pull-right"></i>
                                        </span>
                                    </a>

                                }


                                @{
                                    var selectQueryString2 = "Select * from Permission  where assignedRole='Admin' and Module='" + forinner + "'  order by Name asc";
                                    <ul class="treeview-menu">
                                        @foreach (var row2 in db.Query(selectQueryString2))
                                        {
                                            controllername = row2.ControllerName;
                                            name = row2.Name;
                                            action = row2.ViewName;
                                            webformurl = row2.webFormUrl;
                                            check = row2.IsWebForm;
                                            if (check == true)
                                            {

                                                <li>
                                                    <a href='~/@webformurl'>
                                                        <i class="fa fa-circle-o">
                                                        </i> @name
                                                    </a>
                                                </li>
                                            }
                                            else
                                            {

                                                <li>
                                                    <a href='@Url.Action(action, controllername)'>
                                                        <i class="fa fa-circle-o">
                                                        </i> @name
                                                    </a>
                                                </li>

                                            }



                                        }
                                    </ul>
                                }


                            </li>

                        }

                    }

                    <li>
                        <a href="@Url.Action("LogOut","Account")"><i class='glyphicon glyphicon-log-out my_right'></i>Log Out</a>
                    </li>

                </ul>
            </section>
            <!-- /.sidebar -->
        </aside>

